.custom-block
  border-radius 5px
  .custom-block-title
    font-weight 700
    margin-bottom -0.4rem
  &.tip, &.warning, &.danger
    padding .1rem 1.5rem
    border-left-width 0.313rem
    border-left-style solid
    margin 1rem 0
  &.tip
    background-color rgba(#1b9400,.1)
    border-color #1b9400
    .custom-block-title
      color #20ad00
    .custom-block-title
      color darken(#1b9400, 22%) !important
    p
      color darken(#1b9400, 35%) !important
      code
        color darken(#1b9400, 35%)
        background-color rgba(#1b9400,0.07)
  
  &.warning
    background-color rgba(#FFB822,.1)
    border-color #FFB822
    .custom-block-title
      color darken(#FFB822, 22%) !important
    p
      color darken(#FFB822, 35%) !important
      code
        color darken(#FFB822, 35%)
        background-color rgba(#FFB822,0.1)

  &.danger
    background-color rgba(#e00400,.1)
    border-color #e00400
    .custom-block-title
      color #e00400
    .custom-block-title
      color darken(#e00400, 10%) !important
    p
      color darken(#e00400, 15%) !important
      code
        color darken(#e00400, 15%)
        background-color rgba(#e00400,0.1)

  &.details
    display block
    position relative
    border-radius 2px
    margin 1.6em 0
    padding 1.6em
    background-color #eee
    h4
      margin-top 0
    figure, p
      &:last-child
        margin-bottom 0
        padding-bottom 0
    summary
      outline none
      cursor pointer
